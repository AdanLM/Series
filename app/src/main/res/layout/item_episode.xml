<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_preview_episode"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/preview_img" />

        <TextView
            android:id="@+id/txt_title_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_preview_episode"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Titulo del episodio" />

        <TextView
            android:id="@+id/txt_number_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/txt_title_episode"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="1" />

        <TextView
            android:id="@+id/txt_summary_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_episode"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/img_preview_episode"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            tools:text="Temporada 1\nSegunda linea" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>